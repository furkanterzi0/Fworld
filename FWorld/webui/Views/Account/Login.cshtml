@{
    ViewData["Title"] = "Login";

}
<link rel="stylesheet" href="~/css/passwordIcon.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<style>
.remember{
    background-color: rgb(188, 247, 247);
}
.remember:focus{
    background-color: rgb(188, 247, 247);
}
</style>
@if(TempData["url"]!=null){
    var url=$"http://localhost:5096{TempData["url"]}";
    <p>hesabiniz olusturuldu onaylamak icin <a href=@url>tiklayiniz</a></p>
}
<div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div id="loginRegisterCard" class="card text-center col-sm-8 col-md-6 col-lg-4" style="width: 300px; background-color: #2c3e50; color: #ecf0f1;">
        <div class="card-body">
            <h2 class="card-title">Login</h2>
            <form id="login-form"class="form-login" method="post" asp-controller="Account" asp-action="Login">
                <input type="hidden" name="returnUrl" value=@Model.returnUrl>
                <div class="mb-3">
                    <label for="inputUsername" class="visually-hidden">Username</label>
                    <input type="text" id="inputUsername" name ="Username" class="form-control" placeholder="Username" required autofocus>
                    <span class="text-danger">@ViewBag.UsernameException</span>
                </div>
                <div class="mb-3">
                    <div class="password-container">
                            <label for="inputPassword" class="visually-hidden">Password</label>
                            <input type="password" id="inputPassword" name="Password" class="form-control" placeholder="Password" required>
                            <span id="icon"class="fa-solid fa-eye-slash mb-4"></span>
                            <span class="text-danger">@ViewBag.LoginException</span>

                    </div>
                </div>
                <div class="mb-3 form-check d-flex justify-content-center align-items-center">
                    <input type="checkbox" class="form-check-input me-2 mb-1" id="remember" name="remember">
                    <label class="form-check-label mb-0" for="remember">Remember me</label>
                </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit" id="login" >Login</button>
                <div id="forgetme"></div>
            </form>
        </div>
    </div>
</div>
@section Scripts{

<script src="~/js/passwordIcon.js"></script>
<script src="~/js/login.js" ></script>

