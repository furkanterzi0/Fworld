@model UserRegisterViewModel

<link rel="stylesheet" href="~/css/passwordIcon.css" asp-append-version="true" />

<div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div id="loginRegisterCard" class="card text-center col-sm-8 col-md-6 col-lg-4" style="background-color: #2c3e50; color: #ecf0f1;">
        <div class="card-body">
            <h2 class="card-title">Register</h2>
            <form class="form-register" method="post" asp-controller="Account" asp-action="Register">

                <div class="mb-3 d-flex">
                    <div style="flex: 1; margin-right: 5px;">
                        <div class="form-group">
                            <label asp-for="Name" class="visually-hidden"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger" style="font-size: 12px;"></span>
                        </div>

                    </div>
                    <div style="flex: 1; margin-left: 5px;">
                        <label asp-for="Surname" class="visually-hidden"></label>
                        <input asp-for="Surname" class="form-control" placeholder="Surname">
                        <span asp-validation-for="Surname" class="text-danger" style="font-size: 12px;"></span>
                    </div>
                </div>
                <div class="mb-3">
                        <label asp-for="Email" class="visually-hidden"></label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                        <span asp-validation-for="Email" class="text-danger" style="font-size: 12px;"></span>
                </div>
                <div class="mb-3">
                        <label asp-for="Username" class="visually-hidden"></label>
                        <input asp-for="Username" class="form-control" placeholder="Username">
                        <span asp-validation-for="Username" class="text-danger" style="font-size: 12px;"></span>
                </div>
                <div class=" mb-3 password-container">
                            <label asp-for="Password" class="visually-hidden"></label>
                            <input asp-for="Password" class="form-control" type="password" id="inputPassword" placeholder="Password">
                            <span id="icon"class="fa-solid fa-eye-slash mb-4"></span>

                            <span asp-validation-for="Password" class="text-danger" style="font-size: 12px;"></span>
                            <span class="text-danger" style="font-size: 12px;">@ViewBag.PasswordException</span>
                            
                    </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
                                    
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/js/passwordIcon.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
